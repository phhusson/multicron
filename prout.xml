<?xml version="1.0"?>
<root>
	<cnproc type="exec" match="mplayer .*" file="!/usr/bin/mplayer">
		<ionice  class="realtime" priority="42"/>
		<cpunice class="realtime" priority="42"/>
	</cnproc>
	<cnrpoc type="exec" match="simple .*">
		<ionice class="realtime" priority="3"/>
	</cnproc>
	<cnproc type="exec" match="updatedb">
		<ionice class="idle"/>
		<cpunice class="classic" priority="19"/>
	</cnproc>
	<date hour="19" min="55"><cmd>mplayer -dumpstream dvb://CANAL+ -dumpfile /tmp/Guignols.ts</cmd></date>
	<!-- event type not supported ATM, for now, it is triggered by IN_CLOSE_WRITE|IN_MOVED_TO|IN_CREATE -->
	<!-- match goes through pcre, you can use file for exact matching for complex filenames-->
	<inotify folder="/home/phh/" match="prout">
		<kill pid="42"/>
	</inotify>
	<!--<kill pid="XX" signal="YY"/> no pid -> self or inherited; no signal -> SIGUSR1-->
</root>
